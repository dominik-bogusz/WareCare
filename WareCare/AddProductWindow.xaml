<Window x:Class="WareCare.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WareCare"
        mc:Ignorable="d"
        Title="Add product" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5">Name:</TextBlock>
            <TextBox MaxLength="100"  x:Name="tbxName" Margin="5"></TextBox>
            <TextBlock Margin="5">Brand:</TextBlock>
            <ComboBox x:Name="cmbBrand" Margin="5"></ComboBox>
            <TextBlock Margin="5">Description:</TextBlock>
            <TextBox MaxLength="250" x:Name="tbxDescription" Height="190" Margin="5"></TextBox>
        </StackPanel>
        <Button Click="Submit_Click" VerticalAlignment="Bottom" Margin="5 5 210 5" Style="{StaticResource submitButton}">Submit</Button>
        <Button Click="Cancel_Click" VerticalAlignment="Bottom" Margin="210 5 5 5">Cancel</Button>
    </Grid>
</Window>

<Window x:Class="WareCare.AddBrandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WareCare"
        mc:Ignorable="d"
        Title="Add brand" Height="125" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5">Name:</TextBlock>
            <TextBox MaxLength="100"  x:Name="tbxName" Margin="5"></TextBox>
        </StackPanel>
        <Button VerticalAlignment="Bottom" Margin="5 5 210 5" Style="{StaticResource submitButton}">Submit</Button>
        <Button VerticalAlignment="Bottom" Margin="210 5 5 5">Cancel</Button>
    </Grid>
</Window>
